---
const { text, href = "/" } = Astro.props;
---

<button>
  <a href={href}>
    <p>{text}</p>
  </a>
</button>

<style>
  button {
    background-color: #fcf6ac;
    font-family: "Roboto", sans-serif;
    font-weight: 400;
    font-size: 20px;
    line-height: 32px;
    width: fit-content;
    border: solid 4px #fcf6ac;
    color: #000000;
    padding: 20px;
  }
  button:hover {
    background-color: #000000;
    font-family: "Roboto", sans-serif;
    font-weight: 400;
    font-size: 20px;
    line-height: 32px;
    width: fit-content;
    border: solid 4px #000000;
    color: #fcf6ac;
    padding: 20px;
  }
  @media (max-width: 700px) {
    button {
      background-color: #fcf6ac;
      font-family: "Roboto", sans-serif;
      font-weight: 400;
      font-size: 16px;
      line-height: 32px;
      width: fit-content;
      border: solid 4px #fcf6ac;
      color: #000000;
      padding: 20px;
    }
    button:hover {
      background-color: #000000;
      font-family: "Roboto", sans-serif;
      font-weight: 400;
      font-size: 16px;
      line-height: 32px;
      width: fit-content;
      border: solid 4px #000000;
      color: #fcf6ac;
      padding: 20px;
    }
  }
</style>
