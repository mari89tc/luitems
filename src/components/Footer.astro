---
import "../styles/global.css";
---

<footer>
  <div class="insta_grid">
    <h4>AS SEEN ON INSTAGRAM</h4>
    <div class="img_grid">
      <a href="https://www.instagram.com/lu.items/"><img src="/footer3.webp" alt="instagram post 1" /></a>
      <a href="https://www.instagram.com/lu.items/"><img src="/footer2.webp" alt="instagram post 2" /></a>
      <a href="https://www.instagram.com/lu.items/"><img src="/footer4.webp" alt="instagram post 3" /></a>
      <a href="https://www.instagram.com/lu.items/"><img src="/footer1.webp" alt="instagram post 4" /></a>
    </div>
  </div>
  <div class="logo_grid">
    <img src="/Logo.svg" alt="logo" />
    <h4>GET THE LATEST UPDATES FROM LÜ ITEMS</h4>
  </div>
  <div class="grid_1-1">
    <div>
      <form name="footer_sign">
        <div>
          <label for="email"><br /><br /></label>
          <input id="email" type="text" name="email" />
          <button>SUBSCRIBE</button>
        </div>
      </form>
      <div class="logo_boks">
        <a href=""><img src="/tiktok.svg" alt="tiktok" /></a>
        <a href="https://www.instagram.com/lu.items/"><img src="/instagram.svg" alt="instagram" /></a>
        <a href=""><img src="/mail.svg" alt="mail" /></a>
      </div>
    </div>
    <div class="grid_1-1-1">
      <div>
        <h5>MENU</h5>
        <a href="/">HOME</a>
        <a href="/products">PRODUCTS</a>
        <a href="/about">ABOUT LÜ</a>
        <a href="/projects">PROJECTS</a>
      </div>
      <div>
        <h5>PROJECTS</h5>
        <a href="">VOGUE SCANDINAVIA</a>
        <a href="">VOICE OF IRAN</a>
        <a href="">POLHEM SHOWROOM</a>
        <a href="">PAPAYA SUMMER</a>
      </div>
      <div>
        <h5>COMPANY</h5>
        <a href="">ABOUT LÜ</a>
        <a href="">SHIPPING</a>
        <a href="">CONTACT US</a>
        <a href="">RETURN POLICY</a>
      </div>
    </div>
  </div>

  <p class="copy">Copyright 2023© All Rights Reserved</p>
</footer>
<style>
  footer {
    display: grid;
    margin: 20px;
  }
  .insta_grid {
    display: grid;
  }
  .insta_grid h4 {
    justify-self: center;
    align-self: center;
  }
  .img_grid {
    display: flex;
    gap: 10px;
  }
  .logo_grid {
    display: flex;
    gap: 10px;
  }
  a {
    font-family: "Roboto", sans-serif;
    font-weight: 400;
    font-size: 14pt;
    line-height: 25pt;
    text-decoration: none;
    color: #000000;
  }

  .grid_1-1 {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .footer_sign {
    outline: none;
    line-height: 32px;
    font-family: "Roboto", sans-serif;
    text-decoration: none;
    font-weight: 400;
    font-size: 20pt;
    border: none;
  }
  button {
    background-color: #000000;
    font-family: "Roboto", sans-serif;
    font-weight: 400;
    font-size: 20pt;
    line-height: 32px;
    width: fit-content;
    border: solid 4px #000000;
    color: #fcf6ac;
    padding: 20px;
  }
  input {
    border: none;
    text-decoration: none;
  }
  input[type="text"] {
    border: none;
    background-color: #fcf6ac;
    border: 4px solid #fcf6ac;
    line-height: 32px;
    width: 350px;
    padding: 20px;
  }
  .logo_boks {
    display: flex;
    gap: 25px;
    margin-top: 40px;
    margin-bottom: 30px;
  }
  .grid_1-1-1 {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 20px;
  }
  /* .copy {
    display: grid;
  } */
  footer p {
    justify-self: center;
    align-self: center;
    margin-top: 100px;
    font-family: "Roboto", sans-serif;
    font-weight: 400;
    font-size: 14pt;
    line-height: 25pt;
    text-decoration: none;
    color: #000000;
  }
</style>
