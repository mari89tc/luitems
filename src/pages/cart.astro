---
import Main from "../layouts/Main.astro";
import Linkbutton from "../components/Linkbutton.astro";
import "../styles/global.css";
import Button from "../components/Button.astro";
---

<Main title="Cart">
  <section>
    <Linkbutton href="/products" text="BACK TO PRODUCTS" />
    <h2>CART</h2>
    <div class="basketProduct"></div>
    <template>
      <div class="grid_1">
        <img class="cartImg" />
        <div>
          <h4 class="name"></h4>
          <p class="price"></p>
        </div>
      </div>
    </template>
    <div class="removeBut">
      <Button id="removeButton" href="" text="Remove all" />
    </div>
    <div class="grid">
      <div class="flex_sub">
        <h3>SUBTOTAL</h3>
        <h3 class="sub"></h3>
      </div>
      <p>TAX INCLUDED</p>
      <Button text="CHECKOUT" />
    </div>
  </section>
</Main>
<script>
  // Retrieve the stored data from local storage
  const storedProductDataString = localStorage.getItem("product");

  // Convert the JSON string back to an object
  const storedProductData = JSON.parse(storedProductDataString);
  let total = 0;
  if (storedProductData) {
    for (const product of storedProductData) {
      showProduct(product);
    }
  }
  // storedProductData.forEach(showProduct);
  document.querySelector("h3.sub").textContent = total + "DKK";
  function showProduct(product) {
    //console.log(product);
    // fang template
    const template = document.querySelector("template").content;
    //Lav en kopi
    const copy = template.cloneNode(true);
    // Access the individual properties
    const storedImageUrl = product.imageUrl;
    const storedName = product.name;
    const storedPrice = parseFloat(product.price);
    total += storedPrice;
    copy.querySelector("img.cartImg").src = storedImageUrl;
    copy.querySelector("img.cartImg").alt = storedName;
    copy.querySelector("h4.name").textContent = storedName;
    copy.querySelector("p.price").textContent = storedPrice + "DKK";

    // //appende til DOM
    document.querySelector(".basketProduct").appendChild(copy);
  }
  document.querySelector("#removeButton").addEventListener("click", () => {
    console.log("click");
    localStorage.removeItem("product");
  });
</script>
<style>
  section {
    margin: 20px;
    display: grid;
  }
  section h2 {
    justify-self: center;
    align-self: center;
  }
  .grid_1 {
    display: grid;
    grid-template-columns: 1fr 2fr;
  }
  .grid_1 img {
    width: 250px;
    padding: 20px;
    justify-self: end;
  }
  .removeBut {
    padding-top: 70px;
    justify-self: center;
    align-self: center;
  }
  .grid {
    display: grid;
    border-top: 2px solid #000000;
    justify-content: flex-end;
    margin-top: 140px;
    padding-right: 70px;
  }
  .flex_sub {
    display: flex;
    justify-content: space-between;
    margin-bottom: -40px;
  }

  @media (max-width: 600px) {
    .grid_1 img {
      width: 450px;
      padding: 20px;
      justify-self: end;
    }
    .flex_sub {
      display: flex;
      justify-content: space-between;
      margin-bottom: -20px;
    }
    .grid {
      padding-right: 0;
    }
  }
</style>
