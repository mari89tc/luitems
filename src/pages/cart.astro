---
import Main from "../layouts/Main.astro";
import Linkbutton from "../components/Linkbutton.astro";
import "../styles/global.css";
import Button from "../components/Button.astro";
---

<Main>
  <section>
    <Linkbutton href="/products" text="BACK TO PRODUCTS" />
    <h2>CART</h2>
    <div class="grid_1">
      <img class="cartImg" />
      <div>
        <h4 class="name"></h4>
        <p class="price"></p>
      </div>
    </div>
    <div class="grid">
      <div class="flex_sub">
        <h3>SUBTOTAL</h3>
        <h3 class="sub"></h3>
      </div>
      <p>TAX INCLUDED</p>
      <Button text="CHECKOUT" />
    </div>
  </section>
</Main>
<script>
  // Retrieve the stored data from local storage
  const storedProductDataString = localStorage.getItem("product");

  // Convert the JSON string back to an object
  const storedProductData = JSON.parse(storedProductDataString);

  // Access the individual properties
  const storedImageUrl = storedProductData.imageUrl;
  const storedName = storedProductData.name;
  const storedPrice = storedProductData.price;

  document.querySelector("img.cartImg").src = storedImageUrl;
  document.querySelector("img.cartImg").alt = storedName;
  document.querySelector("h4.name").textContent = storedName;
  document.querySelector("p.price").textContent = storedPrice;
  document.querySelector("h3.sub").textContent = storedPrice;
</script>
<style>
  section {
    margin: 20px;
    display: grid;
  }
  section h2 {
    justify-self: center;
    align-self: center;
  }
  .grid_1 {
    display: grid;
    grid-template-columns: 1fr 2fr;
  }
  .grid_1 img {
    width: 250px;
    padding: 20px;
    justify-self: end;
  }

  .grid {
    display: grid;
    border-top: 2px solid #000000;
    justify-content: flex-end;
    margin-top: 140px;
  }
  .flex_sub {
    display: flex;
    justify-content: space-between;
    margin-bottom: -40px;
  }
</style>
