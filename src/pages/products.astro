---
import Form from "../components/Form.astro";
import Main from "../layouts/Main.astro";
import Products from "../components/Products.astro";
---

<Main>
  <section>
    <h2>PRODUCTS</h2>
    <section class="grid_1">
      <Products />
    </section>
    <Form />
  </section>
</Main>

<style>
  section {
    display: grid;
  }
  h2 {
    justify-self: center;
    align-self: center;
  }
  .grid_1 {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 400px));
    gap: 30px;
    margin-top: 25px;
    margin-bottom: 50px;
    justify-content: center;
    align-self: center;
  }
</style>
